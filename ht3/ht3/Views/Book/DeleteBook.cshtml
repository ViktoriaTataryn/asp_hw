@model Book
<h2>Do you want to delete this book</h2>
<p>@Model.Title</p>
<p>@Model.Author.FirstName  @Model.Author.LastName</p>
<form method="post">
    <input type="hidden" asp-for="Id" />
    <a asp-action="GetBook">Cancel</a>
    <input class="btn btn-danger" type="submit" value="Delete" />
</form>
